<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:switchStyle">@style/CustomSwitchStyle</item>
    </style>

    <style name="WifiDialogInfoTableTextView">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">@dimen/content_text</item>
    </style>

    <style name="WifiDialogInfoTable">
        <item name="android:layout_marginTop">20px</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
    </style>
</resources>
