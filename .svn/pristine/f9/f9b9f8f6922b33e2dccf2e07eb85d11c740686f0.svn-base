<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:padding="@dimen/fg_padding_LandR">

    <com.midea.fridgesettings.view.SwitchEntry
        android:id="@+id/sw_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="60px"
        android:paddingStart="60px"
        android:text="蓝牙"
        android:textColor="#676B6C"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_bluetoothState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/content_text" />
</LinearLayout>