<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fg_tab_width"
    android:layout_height="@dimen/fg_tab_height"
    android:background="@drawable/fgtab_bg"
    android:orientation="horizontal"
    android:paddingStart="@dimen/fg_tb_padding_start">

    <ImageView
        android:id="@+id/tv_entry_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_entry_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="16px"
        android:textColor="@drawable/fgtab_textcolor"
        android:textSize="@dimen/text_fg_tab_entry" />
</LinearLayout>