<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_wifi"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        android:paddingTop="250px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110px"
            android:src="@mipmap/fridge" />

        <TextView
            android:id="@+id/device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:text="BCD-543WKZM(E)"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/content_text" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:text="系统版本：MIDEA2342356576879890"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/content_text" />

        <TextView
            android:id="@+id/tv_curState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:text="当前版本已是最新版本"
            android:textColor="#4A90E2"
            android:textSize="@dimen/content_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wifi_load" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120px"
            android:background="@drawable/bt_update_bg"
            android:layout_marginTop="50px" />
    </LinearLayout>
</FrameLayout>