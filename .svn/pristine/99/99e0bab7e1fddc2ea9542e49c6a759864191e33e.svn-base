<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="@drawable/bg_shengji">


        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="17px"
                android:layout_height="27px"
                android:layout_marginLeft="20px"
                android:background="@drawable/navi_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12px"
                android:layout_marginRight="20px"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="软件升级"
            android:textColor="@color/white"
            android:textSize="36px" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="154px"
        android:background="@drawable/icon_gujian" />

    <TextView
        android:id="@+id/version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210px"
        android:layout_marginTop="157px"
        android:text="2.2.1"
        android:textColor="#4A4A4A"
        android:textSize="24px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210px"
        android:layout_marginTop="191px"
        android:text="Midea Inc"
        android:textColor="#4A4A4A"
        android:textSize="24px" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210px"
        android:layout_marginTop="215px"
        android:text="500M"
        android:textColor="#4A4A4A"
        android:textSize="24px" />


    <ScrollView
        android:layout_width="920px"
        android:layout_height="800px"
        android:background="@drawable/ota_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340px">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="25px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/versiondescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500M"
                android:textColor="#4A4A4A"
                android:textSize="24px" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/black_oval" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增功能与权限"
                    android:textColor="#4A4A4A"
                    android:textSize="24px" />

            </LinearLayout>

            <TextView
                android:id="@+id/updatedescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500M"
                android:textColor="#4A4A4A"
                android:textSize="24px" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/black_oval" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项"
                    android:textColor="#4A4A4A"
                    android:textSize="24px" />

            </LinearLayout>

            <TextView
                android:id="@+id/ota_notic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="24px" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:text="联系电话："
                android:textSize="24px" />

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="30px"
                android:textColor="#4A4A4A"
                android:text="链接："
                android:textSize="24px" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/check_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="1170px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/check"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:background="@drawable/fuxuan01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读升级条款并同意免责声明所有内容。"
            android:textColor="#4A4A4A"
            android:textSize="28px" />

    </LinearLayout>


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="920px"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1300px"
        android:background="@drawable/ota_grey_btn"
        android:gravity="center"
        android:text="升级设备"
        android:textColor="@color/white"
        android:textSize="36px" />


</RelativeLayout>