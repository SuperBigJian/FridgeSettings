<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_wifi"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="250px">

        <ImageView
            android:id="@+id/pic_fridge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="110px" />

        <TextView
            android:id="@+id/device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/content_text" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:ellipsize="end"
            android:maxEms="20"
            android:maxLines="1"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/content_text" />

        <TextView
            android:id="@+id/tv_curState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8px"
            android:text="@string/no_update"
            android:textColor="#4A90E2"
            android:textSize="@dimen/content_text"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wifi_load"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="600px"
            android:layout_height="8px"
            android:maxHeight="8px"
            android:progressDrawable="@drawable/seek_progress"
            android:visibility="gone" />

        <Button
            android:id="@+id/btUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120px"
            android:layout_marginTop="38px"
            android:background="@drawable/bt_update_bg"
            android:gravity="center"
            android:text="@string/check_update"
            android:textColor="#3DBDD2"
            android:textSize="36px" />
    </LinearLayout>
</FrameLayout>